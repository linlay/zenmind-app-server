# Port mapping on host machine.
BACKEND_PORT=11952
FRONTEND_PORT=11950

# OAuth/OIDC issuer, should be your real backend URL in production.
AUTH_ISSUER=http://localhost:8080

# Admin login account.
AUTH_ADMIN_USERNAME=admin

# bcrypt for admin password.
# REQUIRED / 必填: Replace with your own bcrypt hash.
# 必须替换为你自己的 bcrypt 密码哈希，否则服务将无法正常登录。
AUTH_ADMIN_PASSWORD_BCRYPT='$2a$10$XkbhEhxiT/4JC.zkZD9uxuEFf7za4AxEBPbIFmUR41qY0.spPk41q'

# HMAC secret for /api/app/internal/chat-events.
# IMPORTANT / 重要: Replace "change-me" with a strong random secret.
# 请将 "change-me" 替换为高强度随机密钥。
AUTH_APP_INTERNAL_WEBHOOK_SECRET=change-me

# Optional App auth settings.
AUTH_APP_ACCESS_TTL=PT10M
AUTH_APP_MAX_ACCESS_TTL=PT12H
AUTH_APP_ROTATE_DEVICE_TOKEN=true

# Optional OAuth2 token settings.
AUTH_TOKEN_ACCESS_TTL=PT15M
AUTH_TOKEN_REFRESH_TTL=P30D
AUTH_TOKEN_ROTATE_REFRESH_TOKEN=true

# Optional frontend build settings (useful when building from source with docker compose).
VITE_BASE_PATH=/admin/
VITE_DEV_PORT=11950
VITE_DEV_STRICT_PORT=true
VITE_API_PROXY_PATH=/admin/api
VITE_API_PROXY_TARGET=http://backend:8080

# App master password bcrypt.
# REQUIRED / 必填: Replace with your own bcrypt hash.
# 必须替换为你自己的 bcrypt 密码哈希，这是 App 登录主密码。
AUTH_APP_MASTER_PASSWORD_BCRYPT='$2a$10$XkbhEhxiT/4JC.zkZD9uxuEFf7za4AxEBPbIFmUR41qY0.spPk41q'
